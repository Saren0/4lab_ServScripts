<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	<display-name>Lab2Var10</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<filter>
		<display-name>Task6Filter</display-name>
		<filter-name>Task6Filter</filter-name>
		<filter-class>by.gsu.lab.controllers.Task6FilterIndex</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Task6Filter</filter-name>
		<url-pattern>/task6-index.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<servlet>
		<display-name>Task1Controller</display-name>
		<servlet-name>Task1Controller</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task1Controller</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task2Controller</display-name>
		<servlet-name>Task2Controller</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task2Controller</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task3Controller</display-name>
		<servlet-name>Task3Controller</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task3Controller</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task4Controller</display-name>
		<servlet-name>Task4Controller</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task4Controller</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task5Controller</display-name>
		<servlet-name>Task5Controller</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task5Controller</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task6AppendController</display-name>
		<servlet-name>Task6AppendController</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task6AppendController</servlet-class>
	</servlet>
	<servlet>
		<display-name>Task6SearchController</display-name>
		<servlet-name>Task6SearchController</servlet-name>
		<servlet-class>by.gsu.lab.controllers.Task6SearchController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Task1Controller</servlet-name>
		<url-pattern>/Task1Controller</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task2Controller</servlet-name>
		<url-pattern>/Task2Controller</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task3Controller</servlet-name>
		<url-pattern>/Task3Controller</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task4Controller</servlet-name>
		<url-pattern>/Task4Controller</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task5Controller</servlet-name>
		<url-pattern>/Task5Controller</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task6AppendController</servlet-name>
		<url-pattern>/Task6AppendController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task6SearchController</servlet-name>
		<url-pattern>/Task6SearchController</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/c.tld</taglib-location>
		</taglib>
		<taglib>
      		<taglib-uri>/jstl/fmt</taglib-uri>
      		<taglib-location>/WEB-INF/fmt.tld</taglib-location>
    	</taglib>
		<jsp-property-group>
        	<url-pattern>*.jsp</url-pattern>
        	<page-encoding>UTF-8</page-encoding>
    	</jsp-property-group>
	</jsp-config>
</web-app>
